package Automation;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;

import java.time.Duration;

public class BaseTest {
     WebDriver driver;
     AuthenticationPage authPage;

    
     final String UNIQUE_USERNAME_PREFIX = "tester_"; 
     String testUsername; 
     final String VALID_PASSWORD = "Password1!";
     final String BASE_URL = "https://www.demoblaze.com/index.html";

    @BeforeClass
    public void setup() {
        driver = new ChromeDriver();
        driver.manage().window().maximize();
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(5));
        testUsername = UNIQUE_USERNAME_PREFIX + System.currentTimeMillis();
        driver.get(BASE_URL);
        authPage = new AuthenticationPage(driver);
    }

    @AfterClass
    public void teardown() {
        if (driver != null) {
            driver.quit();
        }
    }
}
